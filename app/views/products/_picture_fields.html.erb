<fieldset>
	<div class="row picture-uploader">
		<div class="col-md-10 upload_button_holder">
			<%= link_to("Drop here", "#", :class => "upload_button") %>
			<%= f.cl_image_upload(:img) %>
		</div>
		<div class="col-md-2">
			<%= f.hidden_field :_destroy %>
			<%= link_to "Delete", "#", :class => 'delete btn btn-danger', remote: true %>
		</div>
	</div>
</fieldset>
